<?xml version="1.0" ?>
<robot name="simple_drone">

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <link name="base_link">
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="arms_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.3 0.02 0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
    <visual>
      <origin rpy="0 0 1.57" xyz="0 0 0"/>
      <geometry>
        <box size="0.3 0.02 0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="base_to_arms" type="fixed">
    <parent link="base_link"/>
    <child link="arms_link"/>
    <origin rpy="0 0 0.785" xyz="0 0 0"/>
  </joint>

  <link name="nose_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.02"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>
  <joint name="base_to_nose" type="fixed">
    <parent link="base_link"/>
    <child link="nose_link"/>
    <origin rpy="0 0 0" xyz="0.1 0 0.02"/>
  </joint>

  <link name="tail_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="base_to_tail" type="fixed">
    <parent link="base_link"/>
    <child link="tail_link"/>
    <origin rpy="0 0 0" xyz="-0.1 0 0.02"/> </joint>

</robot>